<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MapActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/linear">
    <LinearLayout
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_buttonsOne"
            android:gravity="center"
            android:scaleType="center"

    >

        <Button
                android:id="@+id/btn_secondOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Menu"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:backgroundTint="#CD5C5C"
                android:label="menu"
                android:background="@drawable/rounded_button"
                android:layout_weight="1"
                android:layout_margin="10dp"
        />
    </LinearLayout>


    <com.example.hinvipskotlin.ZoomLinearLayout
            android:layout_width="match_parent"
            android:id="@+id/zoom_linear_layout"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"  android:id="@+id/mapping"
                android:gravity="center"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout1"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:screenReaderFocusable="true"
                    android:gravity="center"
                    android:accessibilityLiveRegion="1"

            >
            </LinearLayout>


        </RelativeLayout>
    </com.example.hinvipskotlin.ZoomLinearLayout>
    <LinearLayout
            android:layout_weight=".75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_buttons"
            android:gravity="center"
    >

        <Button
                android:id="@+id/btn_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Info"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:backgroundTint="#3796F8"
                android:background="@drawable/rounded_button"
                android:layout_weight="1"
                android:label="info"
                android:layout_margin="10dp"/>



    </LinearLayout>
</LinearLayout>







